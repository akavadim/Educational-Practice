<Window x:Class="Task5_691G.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task5_691G"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" BorderThickness="0">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="dataGridMatrix" Grid.Column="2" CanUserReorderColumns="False" CanUserSortColumns="False" SelectionUnit="Cell" CanUserAddRows="False" CanUserDeleteRows="False" HeadersVisibility="None" IsReadOnly="True"/>
        <Button x:Name="buttonSetMatrix" Content="Задать матрицу" VerticalAlignment="Top" Margin="10,0" Click="ButtonSetMatrix_Click"/>

    </Grid>
</Window>
